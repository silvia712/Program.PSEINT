	definir num,suma,i como entero;
	
	escribir " escribe un numero ";
	leer num;
	
	para i=0 hasta num-1 con paso 1 Hacer
		suma=suma+i;
		
	FinPara
	escribir " la suma total de los numeros comprendidos entre 1 y " num " es " suma;
	
	
